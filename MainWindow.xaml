<Window x:Class="dotnet_installer_example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotnet_installer_example"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border Padding="20">
        <Grid>
        <StackPanel VerticalAlignment="Bottom">
                <Grid VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="Back" Click="Button_Back_Click" Margin="40 0 40 0" />
                    <Button Grid.Column="1" Content="Forward" Click="Button_Forward_Click" Margin="40 0 40 0" />
                </Grid>
            </StackPanel>
            <Frame x:Name="Main" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Border>
</Window>
